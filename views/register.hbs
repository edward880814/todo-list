<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/register" method="POST">

        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="email" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
        </div>

        <div class="form-group mt-3">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}">
      </div>
        <div class="form-group mt-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{ password }}">
        </div>

        <div class="form-group mt-3">
          <label for="confirmPassword">Confirm Password</label>
          <input type="confirmPassword" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password" value="{{ confirmPassword }}">
        </div>

        {{!-- 下面這段div跟教材不同 --}}
        <div class="d-grid gap-2">
          <button class="btn btn-primary mt-3" type="submit">Register</button>
        </div>


      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>